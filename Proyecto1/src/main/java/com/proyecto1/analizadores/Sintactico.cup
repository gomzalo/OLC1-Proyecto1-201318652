//  ------------------------    Declaracion de terminales   ------------------------ 
// Identificadores
terminal identificador, numero, letras, decimal, digito, minuscula, mayuscula, caracteres;
// Simbolos
terminal guionBajo;
// Estructura de archivo
terminal llaveA, llaveC, porcentajes, equivale;
terminal puntoComa, dosPuntos, parA, parC;
// Operaciones
terminal concatenacion, orBooleana, asterisco, mas, interrogacion;
// Conjuntos
terminal conjunto;
terminal coma, tilde;
// Simbolos especiales
terminal admiracion, numeral, dolar, porcentaje, ampersand;
// Caracteres especiales
terminal comillasDobles, comillaSimple, saltoLinea;
//  ------------------------    Declaracion de no terminales   ------------------------
