//  ::::::::::::::::::::::::    Reglas semanticas   ::::::::::::::::::::::::
// |||||||||||||||||||||||  INICIO  |||||||||||||||||||||||
INICIO      ::= 
            CUERPO
            ;
// |||||||||||||||||||||||  CUERPO  |||||||||||||||||||||||
CUERPO      ::=
            llaveA CONJUNTO llaveA
            ;
// |||||||||||||||||||||||  CONJUNTO  |||||||||||||||||||||||
CONJUNTO    ::=
            CONJUNTO conjunto dosPuntos identificador equivale LISTA_CONJUNTOS puntoComa
            | conjunto dosPuntos identificador equivale LISTA_CONJUNTOS puntoComa
            ;

LISTA_CONJUNTOS     ::=
                    LISTA_CONJUNTOS TIPO_CARACTER TIPO_LISTA_CONJUNTOS TIPO_CARACTER
                    | TIPO_CARACTER
                    ;

TIPO_LISTA_CONJUNTOS    ::=
                        coma
                        | tilde
                        ;

TIPO_CARACTER   ::=
                minuscula
                | mayuscula
                | digito
                | caracteres
                ;